{
    "scripts": {
        "start": "node src/main.js",
        "test": "nyc --all mocha",
        "test-cont": "nodemon --exec nyc --all --reporter=lcov mocha",
        "coveralls": "nyc --all npm test && nyc report --reporter=text-lcov | coveralls",
        "lint": "eslint src/**/*.js test/**/*.js",
        "build": "npm run prepare-assets && pkg package.json -t node10-win-x64,node10-linux --out-path dist",
        "prepare-assets": "rm -rf dist && mkdirp dist && mkdirp dist/config && cp config/default.hjson dist/config && cp config/default.json dist/config"
    },
    "name": "Hisho86",
    "version": "1.0.0",
    "description": "Tool to manage visual novel and similar games",
    "main": "src/main.js",
    "bin": "src/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/rlach/gameManagement.git"
    },
    "license": "GPL-3.0",
    "dependencies": {
        "@hapi/joi": "^15.1.1",
        "async": "^3.2.2",
        "bunyan": "^1.8.12",
        "bunyan-format": "^0.2.1",
        "cheerio": "^1.0.0-rc.3",
        "cli-progress": "^2.1.1",
        "config": "^3.2.2",
        "domhandler": "^3.0.0",
        "fs-find": "^0.4.0",
        "hjson": "^3.1.2",
        "htmlparser2": "^3.10.1",
        "iconv-lite": "^0.5.0",
        "image-downloader": "^3.4.2",
        "inquirer": "^6.5.0",
        "inquirer-checkbox-plus-prompt": "^1.0.1",
        "json-diff": "^0.5.4",
        "matcher": "^2.0.0",
        "moment": "^2.24.0",
        "mongoose": "^5.7.10",
        "nedb": "^1.8.0",
        "nedb-promise": "^2.0.1",
        "rage-edit": "^1.2.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "two-way-object-mapper": "^1.1.0",
        "uuid": "^3.3.2",
        "vndb": "^0.1.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "babel-eslint": "^10.0.3",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "coveralls": "^3.0.6",
        "eslint": "^6.2.1",
        "eslint-plugin-mocha": "^6.0.0",
        "husky": "^3.0.3",
        "lint-staged": "^9.2.3",
        "mkdirp": "^0.5.1",
        "mocha": "^6.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "sinon": "^7.4.1"
    },
    "lint-staged": {
        "*.js": [
            "eslint",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && lint-staged && mocha"
        }
    }
}
